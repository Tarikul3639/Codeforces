#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define nn '\n'
#define EPS 1e-9
#define PI 3.1415926535897932384626433832795
int main()
{
    string s;
    cin>>s;
    for(int i=0;i<s.length();i++)
    {
        if(s[0]>='a'&& s[0]<='z')
        {
            s[0]-=32;
        }
    }
    for(int i=0;i<s.length();i++)
    {
        cout<<s[i];
    }
return 0;
}
